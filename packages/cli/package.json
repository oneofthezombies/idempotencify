{
  "name": "@monosaga/cli",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "monosaga": "dist/monosaga.js"
  },
  "scripts": {
    "build": "tsup --dts",
    "build:dev": "tsup --sourcemap --onSuccess \"tsc --emitDeclarationOnly --declaration\""
  },
  "dependencies": {
    "@monosaga/utils": "*",
    "@monosaga/pg": "*",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0"
  },
  "tsup": {
    "entry": [
      "src/monosaga.ts"
    ],
    "format": "esm",
    "clean": true
  }
}
